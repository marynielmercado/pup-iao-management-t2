        <div class="content-container">
            <div class="row" id="content">
                <div class="col-sm-4" id="send">
                    <!--SEND REQUEST-->
                    <h3>
                        Send Request    
                    </h3>
                    <p>
                        Requesting a document needs something to be requested!
                    </p>
                    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#sendRequest-modal">Send</button>
                    <div class="modal fade" id="sendRequest-modal" role="dialog">
                        <div class="modal-dialog">
                            <!--sendRequest-modal Content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Send Request</h4>
                                </div>
                                <div class="modal-body">
                                    <form id="requestForm" method="post" action="/send_request">
                                        <div class="form-group">
                                            <label for="trackingNumber">Tracking Number</label><br/>
                                            <input type="text" id="trackingNumber" name="tracking_number" class="form-control" required>
                                            <h3 id="detail1">Requestor's Details</h3>
                                            <label for="name">Name</label>
                                            <input type="text" id="name" name="requestor_name" class="form-control" required>
                                            <label for="email">Email</label>
                                            <input type="email" id="email" name="email" class="form-control" required>
                                            <label for="phone">Phone</label>
                                            <input type="number" id="phone" name="phone" class="form-control" required>
                                            <label for="designation">Designation</label>
                                            <select id="designation" name="designation" class="form-control" required>
                                            {{#each designation}}
                                            <option value={{this.id}}> {{this.designation}} </option>
                                            {{/each}}
                                            </select>
                                            <label for="branch/campus">Branch/Campus</label>
                                            <select class="form-control" name="campus" > 
                                            {{#each branch}} 
                                            <option value ={{this.id}}> {{this.campus}} </option>
                                            {{/each}}
                                            </select>  
                                            <label> Sector  </label>
                                            <select class="form-control" name="sector" > 
                                            {{#each sector}}   
                                            <option value={{this.id}}> {{this.sector}}  </option>
                                            {{/each}}
                                            </select>
                                            <h3 id="detail2">Request Details</h3>
                                            <label for="event_name">Event Name</label>
                                            <input type="text" id="event_name" name="event_name" class="form-control" required>
                                            <label for="start_date">Event Start Date</label>
                                            <input type="date" id="start_date" name="start_date" class="form-control" required>
                                            <label for="end_date">Event End Date</label>
                                            <input type="date" id="end_date" name="end_date" class="form-control" required>
                                            <label for="notes">Note to the Admin</label>
                                            <textarea type="text" id="notes" name="notes" class="form-control"></textarea>
                                            <p id="reminder">* Note: Files should be compressed and in zip file. File name should be your tracking number. *</p>
                                             <input  class="form-control" type="hidden" id="url" name="url" required> <br>
                                            <input type="file" accept=".zip" id="loadFile" name="loadFile"> <a href=# id="delete" onclick="deletefile()"> Delete </a> <br> <br> 
                                            
                                            <center> <p id="message"> </p> </center>
                                            
                                            <button type="submit" class="btn btn-primary" id="submitbutton" value="upload">Submit</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4" id="update">
